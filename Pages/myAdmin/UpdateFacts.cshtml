@page
@model Portfolioo.Pages.myAdmin.UpdateFactsModel
@{
}
<div class="container">
    <form method="post">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h1>
                    Update-Education
                </h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">clients</label>
                <input class="form-control" asp-for="facts.Clients">
                <input class="form-control" hidden asp-for="facts.Id">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Start-Year</label>
                <input class="form-control" asp-for="facts.projects">
            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">End-Year</label>
                <input class="form-control" asp-for="facts.Hours">
            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <label class="form-label">Institute-Name</label>
                <input class="form-control" asp-for="facts.HardWorkers">
            </div>
        </div>
        <div class="row  justify-content-center">
            <div class="col-md-4">
                <input type="submit" value="Update Education" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

