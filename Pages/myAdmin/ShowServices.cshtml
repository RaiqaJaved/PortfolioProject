@page
@model Portfolioo.Pages.myAdmin.ShowServicesModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tittle</th>
                        <th scope="col">Description</th>
                        <th scope="col">IconName</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.services)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Tittle</td>
                            <td>@item.IconName</td>                      
                            <td>@item.Desc</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateServices" asp-route-Id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
