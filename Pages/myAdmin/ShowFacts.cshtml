@page
@model Portfolioo.Pages.myAdmin.Show_FactsModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Clients</th>
                        <th scope="col">projects</th>
                        <th scope="col">Hours</th>
                        <th scope="col">Hardworkers</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.facts)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Clients</td>
                            <td>@item.projects</td>
                            <td>@item.Hours</td>
                            <td>@item.HardWorkers</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateFacts" asp-route-Id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

