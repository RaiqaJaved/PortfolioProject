@page
@model Portfolioo.Pages.myAdmin.ShowEducationModel
@{
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <table class="table" >
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Degree</th>
                        <th scope="col">SartYear</th>
                        <th scope="col">EndYear</th>
                        <th scope="col">InsitituteName</th>
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.education)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Degree</td>
                            <td>@item.StartYear</td>
                            <td>@item.EndYear</td>
                            <td>@item.InstituteName</td>
                            <td>@item.Desc</td>
                            <td>
                                <a class="btn btn-primary" asp-page="UpdateEducation" asp-route-Id="@item.Id">Update</a>
                            </td>
                            <td>
                                <a class="btn btn-danger" asp-page-handler="Delete" asp-route-Id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
               </tbody>
            </table>
        </div>
    </div>
</div>
